@using AlısverisSepetiMvc.Models.Dto;
@model List<ProductListDto>

<div class="mainbox">
    <div class="box90">
        <div class="fullscreen margintop20">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Sıra
                        </th>
                        <th>
                            Resim
                        </th>
                        <th>
                            Ad
                        </th>
                        <th>
                            Fiyat
                        </th>
                        <th>
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr colspan="6">
                            <td>Ürün Yok</td>
                        </tr>
                    }
                    else
                    {
                        var i = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(i = i + 1)
                                </td>
                                <td>
                                    <img src="/image/@item.ProductImage" alt="">
                                </td>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.ProductPrice
                                </td>
                                <td>
                                    sil,Güncelle
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>